{
  "manifest_version": 3,
  "name": "DeBERTa Hate Speech Detector",
  "version": "1.0",
  "description": "Uses a fine-tuned DeBERTa model to detect and highlight toxic language on web pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://localhost:5000/*",
    "http://localhost:5000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "extension/content/content.js",
        "extension/config.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "extension/background.js",
    "type": "module"
  },
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "extension/ui/popup.html"
  },
  "options_page": "extension/ui/options.html"
}
